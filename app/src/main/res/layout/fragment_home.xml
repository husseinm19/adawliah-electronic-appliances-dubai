<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F5F2F2"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:background="#ffffff"
        android:orientation="vertical">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/adawliahlogo"
            />

        <ViewFlipper
            android:id="@+id/viewflip"
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="250dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/dubaibold"
                android:text="Diamond Titan Best"
                android:textAllCaps="true"
                android:textColor="#123456"
                android:id="@+id/titan_id"
                android:textSize="30dp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/icon12"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/temtitan"
                android:layout_weight="1"



                />
            <View style="@style/Divider.Vertical"/>

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/dititan"
                android:layout_weight="1"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:src="@drawable/icon"
                android:layout_weight="1"
                android:text="درجه حراره الفرن"
                android:textSize="24dp"
                android:textStyle="bold"
                android:fontFamily="@font/lateef"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="#123456"

                />
            <View style="@style/Divider.Vertical"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:fontFamily="@font/lateef"
                android:src="@drawable/icon"
                android:text="حجم القطر"
                android:textSize="24dp"
                android:textColor="#123456"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textStyle="bold" />

        </LinearLayout>
        <View style="@style/Divider.Horizontal"/>



            <ViewFlipper
                android:id="@+id/viewflip2"
                android:layout_width="350dp"
                android:layout_gravity="center"
                android:layout_height="250dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/dubaibold"
                android:text="Concept Plus"
                android:id="@+id/concept_id"
                android:textColor="#123456"
                android:textAllCaps="true"
                android:textSize="30dp" />


        </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/icon1"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/temconcept"
            android:layout_weight="1"



            />
        <View style="@style/Divider.Vertical"/>

        <ImageView
            android:id="@+id/icon22"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/diconcept"
            android:layout_weight="1"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:src="@drawable/icon"
            android:layout_weight="1"
            android:text="درجه حراره الفرن"
            android:textSize="24dp"
            android:textColor="#123456"
            android:textStyle="bold"
            android:fontFamily="@font/lateef"
            android:layout_centerHorizontal="true"
            android:gravity="center"

            />
        <View style="@style/Divider.Vertical"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:fontFamily="@font/lateef"
            android:src="@drawable/icon"
            android:text="حجم القطر"
            android:textSize="24dp"
            android:textColor="#123456"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </LinearLayout>

    </LinearLayout>




</ScrollView>