<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F2F2"
    android:padding="12dp"
    tools:context=".ConceptPlus">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:src="@drawable/concept" />

    <HorizontalScrollView
        android:id="@+id/horizontal_scroll2"
        android:layout_width="match_parent"
        android:layout_height="250dp" >

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>

    </HorizontalScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/dubaibold"
        android:gravity="center"

        android:text="concept plus"
        android:textAllCaps="true"
        android:textColor="#123456"
        android:id="@+id/titan_id"
        android:textSize="30dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="270dp">

        <TextView
            android:id="@+id/concept_text_view"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:fontFamily="@font/schehebold"
            android:gravity="right"
            android:text="@string/text_concepts"
            android:textColor="#123456"
            android:layout_marginRight="14dp"
            android:layout_margin="14dp"
            android:textSize="24dp" />


    </ScrollView>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="18dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:gravity="center">
        <Button
            android:id="@+id/btn_call_conept"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="#019680"
            android:fontFamily="@font/lateef"
            android:text="أتصل بنا"
            android:textColor="#fff"
            android:layout_alignParentBottom="true"

            android:textSize="30dp"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>