<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F5F2F2"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/adawliahlogo" />








    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        android:weightSum="2">


        <ImageView
            android:id="@+id/wwhatsapp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight=".5"
            android:src="@drawable/whatsapp"/>

        <ImageView
            android:id="@+id/website"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_weight=".5"
            android:src="@drawable/website"

            />

        <ImageView
            android:id="@+id/youtube"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:layout_weight=".5"
            android:src="@drawable/youtub"

            />

        <ImageView
            android:id="@+id/facebook"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:layout_weight=".5"
            android:src="@drawable/facebook"

            />


    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <LinearLayout


        android:background="@drawable/border_line_buttom"
        android:layout_width="match_parent"
        android:layoutDirection="ltr"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="45dp">
            <ImageView
                android:id="@+id/call_CS"
                app:srcCompat="@drawable/ic_call"
                android:tint="@color/colorPrimary"
                android:layout_width="30dp"
                android:layout_height="30dp"
                tools:ignore="VectorDrawableCompat" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="10"
            android:layout_width="0dp"
            android:layoutDirection="rtl"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="23sp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_marginRight="14dp"
                android:fontFamily="@font/schehebold"
                android:text="للتواصل والشكاوى وخدمه العملاء"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>




    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />


    <LinearLayout


        android:background="@drawable/border_line_buttom"
        android:layout_width="match_parent"
        android:layoutDirection="ltr"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="45dp">
            <ImageView
                android:id="@+id/call_Norder"
                app:srcCompat="@drawable/ic_call"
                android:tint="@color/colorPrimary"
                android:layout_width="30dp"
                android:layout_height="30dp"
                tools:ignore="VectorDrawableCompat" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="10"
            android:layout_width="0dp"
            android:layout_marginRight="14dp"
            android:layoutDirection="rtl"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="23sp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/schehebold"
                android:text="لعمل طلب جديد"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>




    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/rakkas"
            android:gravity="center"
            android:paddingRight="15dp"
            android:textColor="#000000"
            android:text="الضمان : 10 سنوات ضمان "
            android:textSize="30dp"
             />

    </RelativeLayout>

    <View style="@style/Divider.Horizontal" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/rakkas"
            android:textColor="#000000"
            android:gravity="end"
            android:text="شروط الضمان                       "
            android:textSize="30dp"
             />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="280dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/daman"
            android:fontFamily="@font/schehebold"
            android:textSize="20sp"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textColor="#123456"


            />


    </ScrollView>

    <View style="@style/Divider.Horizontal" />




</LinearLayout>